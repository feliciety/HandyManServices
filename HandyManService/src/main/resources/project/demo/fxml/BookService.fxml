<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="1128.0" prefWidth="1440.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="project.demo.controllers.BookServiceController">
    <children>
        <!-- Header Section -->
        <HBox alignment="CENTER_LEFT" layoutX="20.0" layoutY="20.0" spacing="10.0" />

        <!-- Service Filter Section -->
        <VBox alignment="CENTER" layoutX="1014.0" layoutY="467.0" spacing="15.0">
            <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Filter by Service" />
            <ComboBox fx:id="serviceFilterComboBox" prefHeight="26.0" prefWidth="267.0" />
        </VBox>

        <!-- Employee Table -->
        <TableView fx:id="employeeTable" layoutX="50.0" layoutY="541.0" prefHeight="578.0" prefWidth="869.0">
            <columns>
                <TableColumn fx:id="employeeImageColumn" prefWidth="211.0" text="Image" />
                <TableColumn fx:id="employeeNameColumn" prefWidth="299.0" text="Name" />
                <TableColumn fx:id="employeeServiceColumn" prefWidth="149.0" text="Service" />
                <TableColumn fx:id="employeeAvailabilityColumn" prefWidth="167.0" text="Availability" />
            </columns>
        </TableView>

        <!-- Service Card Container -->
        <VBox fx:id="serviceCardContainer" layoutX="950.0" layoutY="541.0" prefHeight="578.0" prefWidth="400.0" spacing="10.0" style="-fx-border-color: #ddd; -fx-padding: 10; -fx-background-color: #f9f9f9;">
            <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Employee Cards" />
        </VBox>
         <Label layoutX="53.0" layoutY="196.0" style="-fx-font-size: 32px; -fx-font-weight: bold;" text="Book A Service" />
    </children>
</AnchorPane>
