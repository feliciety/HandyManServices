<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>

<HBox xmlns:fx="http://javafx.com/javafx" xmlns:fx="http://javafx.com/javafx/8.0.171"
      fx:controller="project.demo.controllers.EmployeeCardController"
      spacing="10" style="-fx-border-color: #ddd; -fx-border-radius: 5; -fx-padding: 10;">
    <!-- Employee Image -->
    <ImageView fx:id="employeeImage" fitWidth="50" fitHeight="50" preserveRatio="true" />

    <!-- Employee Details -->
    <VBox spacing="5">
        <Label fx:id="employeeName" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
        <Label fx:id="employeeService" style="-fx-font-size: 12px;" />
        <Label fx:id="employeeAvailability" style="-fx-font-size: 12px; -fx-text-fill: green;" />
    </VBox>
</HBox>
