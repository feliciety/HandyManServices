<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="730" prefWidth="1440" stylesheets="@../styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="project.demo.controllers.CheckoutController">

    <HBox fx:id="topBar" alignment="CENTER_LEFT" layoutX="0" layoutY="0" prefHeight="70.0" prefWidth="1440.0" spacing="10" style="-fx-background-color: #f4f4f4;" AnchorPane.leftAnchor="0.0">
        <Label prefHeight="35.0" prefWidth="208.0" text="Checkout">
         <HBox.margin>
            <Insets left="40.0" />
         </HBox.margin>
         <font>
            <Font name="System Bold" size="24.0" />
         </font></Label>
        <Button fx:id="backToCartButton" onAction="#goBackToCart" styleClass="secondary-button" text="Back to Cart">
         <HBox.margin>
            <Insets left="1030.0" />
         </HBox.margin></Button>
    </HBox>

    <TableView fx:id="checkoutTable" layoutX="20" layoutY="70" prefHeight="500" prefWidth="1400.0">
        <columns>
            <TableColumn fx:id="productNameColumn" prefWidth="600" text="Product Name" />
            <TableColumn fx:id="productPriceColumn" prefWidth="200" text="Price" />
            <TableColumn fx:id="productQuantityColumn" prefWidth="200" text="Quantity" />
            <TableColumn fx:id="productTotalColumn" prefWidth="200" text="Total" />
        </columns>
    </TableView>
   <VBox fx:id="bottomBar" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="580.0">
      <children>
           <Label style="-fx-font-size: 16px;" text="Total Items:" />
           <Label fx:id="totalItemsLabel" style="-fx-font-size: 16px;" />
           <Label style="-fx-font-size: 16px;" text="Total Amount:" />
           <Label fx:id="totalAmountLabel" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
           <Button fx:id="confirmCheckoutButton" onAction="#confirmCheckout" styleClass="primary-button" text="Confirm and Checkout" />
      </children>
   </VBox>
</AnchorPane>
